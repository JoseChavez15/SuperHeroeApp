<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HeroDetailsActivity">

    <ImageView
        android:id="@+id/ivSuperheroPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_person" />

    <TextView
        android:id="@+id/tvSuperheroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/ivSuperheroPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        tools:text="Superhero Name" />

    <TextView
        android:id="@+id/tvRealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/tvSuperheroName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        tools:text="Real Name" />

    <TextView
        android:id="@+id/tvPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/tvRealName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        tools:text="Publisher" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/tvPublisher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        tools:text="Description" />

</RelativeLayout>